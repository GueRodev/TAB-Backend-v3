# ==============================================================================
# CONFIGURACIÓN DE STAGING - LARAVEL CLOUD
# ==============================================================================
# Este archivo contiene las variables de entorno para el ambiente de staging
# Las credenciales de DB y Object Storage son inyectadas automáticamente por Laravel Cloud
# ==============================================================================

# Aplicación
APP_NAME="Toys and Bricks API"
APP_ENV=staging
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=America/Costa_Rica
APP_URL=https://tab-backend-v3-staging-jmuzni.laravel.cloud
FRONTEND_URL=https://your-app.netlify.app
# FRONTEND_URL=https://toysandbricks.store  # Descomentar cuando el dominio esté configurado

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_CR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# Logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Base de Datos - PostgreSQL (Laravel Cloud)
# IMPORTANTE: Laravel Cloud inyecta automáticamente estas variables cuando se adjunta una base de datos
# NO necesitas configurarlas manualmente, solo se incluyen aquí como referencia
DB_CONNECTION=pgsql
DB_HOST=
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Sesiones
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=log

# Object Storage - Laravel Cloud (Cloudflare R2)
# IMPORTANTE: Laravel Cloud inyecta automáticamente estas variables cuando se adjunta un bucket
# El valor de FILESYSTEM_DISK será establecido automáticamente como 's3'
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_ENDPOINT=
AWS_URL=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Queue
QUEUE_CONNECTION=database

# Cache
CACHE_STORE=database
# CACHE_PREFIX=

# Memcached (opcional, no usado en staging)
MEMCACHED_HOST=127.0.0.1

# Redis (opcional, no usado en staging)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email - Hostinger SMTP (PRODUCCIÓN)
# Configuración del servicio de email corporativo de Hostinger
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=587
MAIL_USERNAME=info@toysandbricks.store
MAIL_PASSWORD=your-hostinger-email-password-here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=info@toysandbricks.store
MAIL_FROM_NAME="Toys and Bricks"

# Vite
VITE_APP_NAME="${APP_NAME}"
